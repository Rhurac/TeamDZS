<body>

  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <p class="lead">{{username}}</p>
        <img src={{picture}} alt="zerg" width="200" height="auto">
        <h4>Questions I've Asked:</h4>
        <div class="list-group">
          {{#each myQuestions}}
            <a href="#" class="list-group-item">{{shortdesc}}</a>
            <br />
          {{/each}}
        </div>
        <h4>Questions I've Answered:</h4>
        <div class="list-group">
          {{#each myQuestions}}
          <a href="#" class="list-group-item">{{shortdesc}}</a>
          <br />
          {{/each}}
        </div>
      </div>

      <div class="col-md-9">
          <h1> Welcome to CIS{{courseID}} </h1>
          <form class="questions" action="/questions/{{courseID}}" method="post">
            <h2 class="form-signin-heading"></h2>
            <input name="short" type="text" id="short" class="form-control" placeholder="Write a Short description" required>
            <input name="question" type="text" id="question" class="form-control" placeholder="Write a question" required>
            <button class="btn btn-lg btn-success btn-block" type="submit">Post</button>
          </form>
          <br />

          {{#each questions}}
            <div class="thumbnail" style="padding:15px;">
              <div class="caption-full">
                  <h4><a onclick="showAnswerQuestionForm()" href="#">{{course}} - {{shortdesc}}</a><span class="pull-right">{{date}}</span></h4>
                  <div id="qid" class="hidden">{{id}}</div>
                  <div class="well">
                    {{desc}}
                  </div>
              </div>
              <div class="ratings">
                  <p class="pull-right">{{numOfReviews}} reviews</p>
                  <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star-empty"></span>
                    {{rating}} stars
                  </p>
              </div>
            </div>
          {{/each}}

      </div>
    </div>
  </div>

  <div class="container">
    <hr>
    <footer>
      <p>Team DZS</p>
    </footer>
  </div>

</body>

<form id="answerQuestionForm" class="col-md-6 hidden" action="/questions/update" method="GET">
  <div class="form-group">
    <label for="answer">Answer this question:</label>
    <textarea name="answer" placeholder="Enter your answer here. Be as descriptive as possible." class="form-control" rows="8" id="answer" autofocus></textarea>
  </div>
  <button class="btn btn-lg btn-success btn-block" type="submit">Post Answer</button>
  <!-- <a id="postAnswerBtn" class="btn btn-lg btn-success btn-block" type="submit" role="button">Post Answer</a> -->
</form>

<style>
  #answerQuestionForm {
    background-color: green;
    border-style: solid;
    border-width: medium;
    border-radius: 1em;
    height: 300px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }
  #answerQuestionForm button {
    margin-bottom: 5px;
  }
  #answerQuestionForm label {
    font-size: 1.5em;
    padding-left: 10px;
    margin-top: 5px;
  }
</style>

<script>
  $("document").ready(function(){
    // $(document).on("click","#postAnswerBtn",function(){
    //   var form = $(this).closest("form");
    //   form.submit();
    // });
    answerQuestion(anchorTag);
    showAnswerQuestionForm();
  });

  function showAnswerQuestionForm(){
    var id = $("#qid").text();
    $("#answerQuestionForm").removeClass("hidden");
    $("#answerQuestionForm").append("<p id='hidden_id' name='id' type='text' class='form-control hidden'>" + id + "</p>");
  }
</script>
