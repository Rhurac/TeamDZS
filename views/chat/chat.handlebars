    <title>Chat</title>
    <link href="/css/chat.css" rel="stylesheet" type="text/css">
    <h1 style="color: #512888";>Welcome to Chat room!</h1></br>
    <!-- alert("hi"); -->

    <div id="chat"></div> </br>
  	<form id="send-message">
    	<input id="message"></input>
  		<button style="height:30px; width: 72px;"> Send </button>
  	</form>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <!-- TUE: 9:40-11:30 -->
    <script>
      jQuery(function($){
        var uname = ""+"{{username}}";
        var finalMsg = "";
        //alert({{uname}});
        var socket = io.connect();
        var $form = $('#send-message');
        var $msgBox = $('#message').css({ 'height': "30px", 'width': "65%" });
        $('msgBox').attr( 'autocomplete', 'off' );
        var $chat = $('#chat').css({ 'height': "450px", 'width':"71.5%", 'overflow': "scroll", 'border-style': "solid"});
      $form.submit(function(e){
        e.preventDefault();
        var msg = ""+uname+": "+$msgBox.val().replace(/</g, "&lt;").replace(/>/g, "&gt;");
        socket.emit('send message', msg);
        $msgBox.val('');
      });

      socket.on('new message', function(data){
        data = data.replace(/</g, "&lt;").replace(/>/g, "&gt;");
        finalMsg = "&nbsp"+"&nbsp;"+data;
        //alert(finalMsg);
        $chat.append("", finalMsg, "<br/><br/>");
      });
    });
 </script>
